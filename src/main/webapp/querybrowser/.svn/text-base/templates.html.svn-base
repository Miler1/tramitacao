<!-- Template para desenhar uma tabela de listagem de dados -->
<script id="responseTemplate" type="text/x-jquery-tmpl">

	<table id="hor-minimalist-b"><tbody>

		<tr>
			<td width="10px" ><b>SQL: </b></td>
			<td>{{html sql}}</td>
		</tr>
			
		<tr>
			<td><b>Mensagem: </b></td>
			<td>{{html message}}</td>
		</tr>
		
		<tr>
			<td colspan="2"><b>Resultado:</b></td>
		</tr>
			
		{{if result}}
			<tr>
				<td colspan="2">
					{{tmpl "#listResultTemplate"}}
				</td>
			</tr>
		{{/if}}
		
	</tbody></table>
		
</script>


<script id="listResultTemplate" type="text/x-jquery-tmpl">

<table id="gradient-style" class="listTable">

	{{each(i, res) result}}

		{{if i == 0}}
	
			<thead>
				<tr>
					{{each(j, r) res}}
					<th scope="col">{{html j}}</th>
					{{/each}}
				</tr>
			</thead>
			<tbody>

		{{/if}}

		<tr>
			{{each(j, r) res}}
				<td>{{html r}}</td>
			{{/each}}
		</tr>

	{{/each}}

	</tbody>
</table>

</script>